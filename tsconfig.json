{
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": ".",
    "target": "ES5",
    "watch": true,
    "allowUnreachableCode": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "isolatedModules": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "watchOptions": {
    "excludeDirectories": ["node_modules"]
  }
}